<body>
  <div class="d-flex justify-content-between align-items-start mt-4">
  <!-- Liens de navigation à gauche -->
    <div>
      <%= link_to root_path, class: "nav-link" do %>
        <div class="d-flex flex-row align-items-center m-3">
          <img src="/assets/arrow-bar-left.svg" alt="arrow-bar-left">
          <span class="ml-2"><%= t("globals.return") %></span>
        </div>
      <% end %>
      <%= link_to t("devise.connexion.update_profile"), edit_user_registration_path, class: "nav-link m-3" %>
    </div>

    <!-- Image de l'utilisateur à droite avec espace -->
    <div class="d-flex align-items-center mr-3">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, size: "150x150", class: "img-thumbnail rounded-circle mr-4" %>
      <% end %>
    </div>
  </div>

  <div class="container col-md-4 mt-4 shadow-box border p-3 rounded">

    <%= simple_form_for @user do |f| %>
      <%= f.input :pseudo, label:  t("globals.user_form.pseudo") %>
      <%= f.input :first_name, label:  t("globals.user_form.first_name") %>
      <%= f.input :last_name, label:  t("globals.user_form.last_name") %>
      <%= f.input :email, label:  t("globals.user_form.email") %>
      <%= f.input :phone, label: t("globals.user_form.phone"), input_html: { pattern: '\d*', title: 'Veuillez entrer un numéro de téléphone valide' } %>
      <%= f.input :street, label:  t("globals.user_form.street") %>
      <%= f.input :zip_code, label:  t("globals.user_form.zip_code") %>
      <%= f.input :city, label:  t("globals.user_form.city") %>
      <%= f.input :credit, label:  t("globals.user_form.credit"), :readonly => true %>
      <%= f.input :avatar, as: :file, label: t("globals.user.image")%>

      <div class="d-flex justify-content-center rounded red">
        <%= f.button :submit, value: t("globals.user_form.update") %>
      </div>
    <% end %>
  </div>
</body>
